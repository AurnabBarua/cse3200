@model Project_3200_2.Models.Treatment

@{
    ViewBag.Title = "TakeService";
    var doctorName = ViewBag.doctorName;
    Layout = "~/Views/Shared/_Layout_Patient.cshtml";
}

<h2>TakeService</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Treatment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TreatmentProblem,"Problem", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ 
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "Skin",
                        Value = "Skin"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Eye",
                        Value = "Eye"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Dental",
                        Value = "Dental"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Neurology",
                        Value = "Neurology"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Cardiology",
                        Value = "Cardiology"
                    });


                }
                @Html.DropDownListFor(model => model.TreatmentProblem, listItems,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TreatmentProblem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TreatmentDateTime,"Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TreatmentDateTime, new { htmlAttributes = new { @class = "form-control" }, Type="date" })
                @Html.ValidationMessageFor(model => model.TreatmentDateTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="button">Confirm</button>
            </div>
        </div>
    </div>
}

<div>
    @*@Html.ActionLink("Back to List", "Index")*@
    @{ 
        if(doctorName != null)
        {
            <h3>Go to @doctorName</h3>
        }
    }
</div><p>Need Emergency Service? <a href="~/Emergencies/AllEmergency">Click here</a> for taking emergency treatment.</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
