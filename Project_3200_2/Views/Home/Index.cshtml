@*Home Section*@

<section class="home" id="home">

    <div class="cont">
        <div class="row min-vh-100 aling-item-center text-center text-md-left">

            <div class="col-md-6 pr-md-5">
                <img src="~/fonts/img/Home.svg" width="100%" alt="">

