    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NurseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NurseEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NursePassword)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NurseAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NursePhone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NurseId }, new { @class = "btn button" }) |
            @Html.ActionLink("Details", "Details", new { id=item.NurseId }, new { @class = "btn button" }) |
