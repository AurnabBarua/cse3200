                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Smart Health Clinic", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
